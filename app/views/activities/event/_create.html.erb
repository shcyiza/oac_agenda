<% if @events.exists?(id: activity.trackable_id) %>
<% events_that_day = 0 %>
<% current_user.events.each do |event| %>
  <% activity.trackable.days.each do |date| %>
    <% if event.days.include?(date) == true && event.created_at <= activity.trackable.created_at %>
      <% events_that_day  += 1 %>
    <% end %>
  <% end %>
<% end %>
<% if current_user.foldates.where("created_at <= ?", activity.trackable.created_at ).where(datefolwd: activity.trackable.esdate.to_date).count > 0 && activity.user_id != current_user.id %>
  <div class="alert-box lists row">
    <hr>
      <div class="large-1  large-center columns">
        <%= image_tag activity.trackable.flyer.url() %>
        <font size="6"><i class="fi-plus"></i></font>
      </div>
      <div class="large-6 columns left">
        <%= activity.created_at %><br>
        <%= link_to activity.trackable.orgn.oname, activity.trackable.orgn %> a crée l'évenement <%= link_to activity.trackable.enom, activity.trackable %>
      </div>
      <div class="small-5 columns left">
        Suivez la date du <%= link_to :controller => :agenda, :action => :index, start_date: current_user.foldates.where(datefolwd: activity.trackable.esdate.to_date).first.datefolwd do %>
        <%= current_user.foldates.where(datefolwd: activity.trackable.esdate.to_date).first.datefolwd %>
        <% end %>
      </div>
    </div>
<% elsif current_user.folorgs.where("created_at <= ?", activity.trackable.created_at ).where(orgn_id: activity.trackable.orgn_id).count > 0 && activity.user_id != current_user.id %>
  <div class="alert-box lists row">
    <hr>
      <div class="large-1 columns">
        <font size="6"><i class="fi-plus"></i></font>
      </div>
      <div class="large-6 columns left">
        <%= activity.created_at %><br>
        <%= link_to activity.trackable.orgn.oname, activity.trackable.orgn %> a crée l'évenement <%= link_to activity.trackable.enom, activity.trackable %>
      </div>
      <div class="small-5 columns left">
        Suivez l'organisation <%= link_to activity.trackable.orgn do %>
        <%= @orgns.find(activity.trackable.orgn_id).oname %>
        <% end %>
      </div>
    </div>
    <% elsif events_that_day > 0 && activity.trackable.user_id != current_user.id %>
      <div class="alert-box lists row">
        <hr>
          <div class="large-1 columns">
            <font size="6"><i class="fi-plus"></i></font>
          </div>
          <div class="large-6 columns left">
            <%= activity.created_at %><br>
            <%= link_to activity.trackable.orgn.oname, activity.trackable.orgn %> a crée l'évenement <%= link_to activity.trackable.enom, activity.trackable %>
          </div>
          <div class="small-5 columns left">
            <br>
            <% current_user.events.each do |event| %>
            <% activity.trackable.days.each do |date| %>
              <% if event.days.include?(date) == true && event.created_at <= activity.trackable.created_at %>
                Vous avez l'événement <%= link_to event do %>
                <%= event.enom %>
                <% end %> ce jour la
              <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
<% end %>
<% end %>
