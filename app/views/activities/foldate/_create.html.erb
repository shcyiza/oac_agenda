<% if @foldates.exists?(id: activity.trackable_id)%>
<% events_that_day = 0 %>
<% current_user.events.each do |event| %>
  <% if event.days.include?(activity.trackable.datefolwd) == true && event.created_at <= activity.trackable.created_at %>
    <% events_that_day  += 1 %>
  <% end %>
<% end %>
<% if @foldates.where("created_at <= ?" , activity.trackable.created_at ).where(user_id: current_user.id, datefolwd: activity.trackable.datefolwd ).count > 0 && activity.trackable.user_id != current_user.id %>
  <div class="alert-box lists row">
    <hr>
    <div class="large-1 columns">
      <font size="6"><i class="fi-heart"></i></font>
    </div>
    <div class="large-6 columns left">
      <%= activity.created_at %><br>
      <%= link_to activity.user.username, activity.user %> de <%= link_to activity.user.orgns.first.oname, activity.user.orgns.first %>
      suit la date du
      <%= link_to :controller => :agenda, :action => :index, start_date: activity.trackable.datefolwd do %><%= activity.trackable.datefolwd %><% end %> comme vous.
    </div>
    <div class="small-5 columns left">
      Suivez la date du <%= link_to :controller => :agenda, :action => :index, start_date: @foldates.where(user_id: current_user.id, datefolwd: activity.trackable.datefolwd ).first.datefolwd do %>
      <%= @foldates.where(user_id: current_user.id, datefolwd: activity.trackable.datefolwd ).first.datefolwd %>
      <% end %>
    </div>
  </div>
  <% elsif events_that_day > 0 && activity.trackable.user_id != current_user.id %>
    <div class="alert-box lists row">
      <hr>
      <div class="large-1 columns">
        <font size="6"><i class="fi-heart"></i></font>
      </div>
      <div class="large-6 columns left">
        <%= activity.created_at %><br>
        <%= link_to activity.user.username, activity.user %> de <%= link_to activity.user.orgns.first.oname, activity.user.orgns.first %>
        suit la date du
        <%= link_to :controller => :agenda, :action => :index, start_date: activity.trackable.datefolwd do %><%= activity.trackable.datefolwd %><% end %>.
      </div>
      <div class="small-5 columns left">
        <br>
        <% current_user.events.each do |event| %>
          <% if event.days.include?(activity.trackable.datefolwd) == true %>
            Vous avez l'événement <%= link_to event do %>
            <%= event.enom %>
            <% end %> ce jour la.
          <% end %>
        <% end %>
      </div>
    </div>
<% end %>
<% end %>
