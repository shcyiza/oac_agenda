<div class="pagedefault">
<h2 class="text-center impress"><i class="fi-heart"></i> Notification d'activité</h2>
<link href="http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css" rel="stylesheet">
<% if @unseen_activities.count > 0 %>
  <br>
  <h5 class="text-center"><p>Non vue(s)</p></h5>
  <hr>
  <% @unseen_activities.each do |activity| %>
    <%= render "activities/#{activity.trackable_type.underscore}/#{activity.action}", activity: activity %>
  <% end %>
  <% if @activities.count != @unseen_activities.count %>
  <br>
  <h5 class="text-center"><p>Déjà vue(s)</p></h5>
  <hr>
    <% @activities.each do |activity| %>
      <% unless @unseen_activities.include?(activity) %>
        <%= render "activities/#{activity.trackable_type.underscore}/#{activity.action}", activity: activity %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
<br>
<h5 class="text-center"><p>Déjà vue(s)</p></h5>
<hr>
  <% @activities.each do |activity| %>
    <%= render "activities/#{activity.trackable_type.underscore}/#{activity.action}", activity: activity %>
  <% end %>
<% end %>
</div>
