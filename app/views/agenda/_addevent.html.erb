<%= simple_form_for(@addevent) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs container">
    <form>
    <hr></hr>
    <ladel>Flyer de l'événement<i class="fi-photo"></i>
    <%= f.file_field :flyer, class: 'form-control'%>
    </label>
    <div class="large-8 columns center">
    <%= f.input :enom, :label => "Nom de l'événement" %> </div>
    <div class="large-4 columns">
    <B> Qui l'organise? </B>
    <%= collection_select(:event, :orgn_id, current_user.orgn, :id, :oname) %></div>
    <br>
