
<a href="#" data-reveal-id="jour_<%= day_id(jour) %>">
  <font color='grey' onmouseover="this.style.color='red';" onmouseout="this.style.color='grey';" title="Cliquez sur le coeur pour suivre cette date"><i class="fi-heart" ></i>
    <% if followed_date(jour).count > 0 %>
      <sup><%= followed_date(jour).count %></sup>
    <% end %>
  </font>
</a>
<div id="jour_<%= day_id(jour) %>" class="reveal-modal small" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog" >
  <%= render :partial => 'dateview', locals: {jour: jour} %>
  <br>
  <b>Suivre cette date?</b>
  <br>
   <font color="#ff6600"><%= followed_date(jour).count %></font> organisation(s) sui(vent)s.<br>
  <br>
    <%= render :partial => "foldate", locals: {jour: jour} %>
    <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>
