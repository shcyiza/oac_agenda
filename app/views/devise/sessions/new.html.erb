<h3 class="impress text-center">Connectez-vous</h3>
<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>

    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to "S'inscrire!", new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label 'e-mail' %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "mot de passe oublié?", new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label 'mot de passe' %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <%= f.submit 'Sign in', :class => 'button right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Restez connecté(e)
          </label>
        </div>
      <% end %>
  <% end %>
</div>
