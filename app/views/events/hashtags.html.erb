

<h1 class="impress">Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Orgn</th>
      <th>Enom</th>
      <th>Edesc</th>
      <th>Edate</th>
      <th>Pafpre</th>
      <th>Pafplace</th>
      <th>Pays</th>
      <th>Ville</th>
      <th>Codepostal</th>
      <th>Rue</th>
      <th>Nrrue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.orgn.oname %></td>
        <td><%= event.enom %></td>
        <td><%= render_hashtags(event.edesc) %></td>
        <td><%= event.esdate %></td>
        <td><%= event.pafpre %></td>
        <td><%= event.pafplace %></td>
        <td><%= event.pays %></td>
        <td><%= event.ville %></td>
        <td><%= event.codepostal %></td>
        <td><%= event.rue %></td>
        <td><%= event.nrrue %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

