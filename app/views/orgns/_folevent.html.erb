
<%= simple_form_for(@folevent) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id,:as => :hidden, :readonly => true %>
    <%= f.input :event_id,:as => :hidden, :readonly => true %>
  </div>

  <div class="form-actions">
    <%= button_tag(type: 'submit', class: "left button secondary round") do %>
      <i class="icon fi-link"></i> suivre cette evenement
    <% end %>
  </div>
<% end %>
