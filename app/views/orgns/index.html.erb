<h1>Listing Orgns</h1>
<br>
<div class="row">
   <div class="large-12 columns left">
  <%= link_to new_orgn_path do %> <button class="button success"><i class="fi-plus"></i> ajouter organisation</button><% end %>
</div>
<% @orgns.each do |orgn| %>
   <div class="large-3 columns left">
     <div class="service">
          <div class="service-icon-box">
            <%= image_tag orgn.avatar.url(:medium)%>
          </div>
          <h4 class="service-heading"><%= orgn.oname %> </h4>
          <p class="service-description"><%= orgn.odesc %></p>
        </div>
   </div>
<% end %>
</div>
<p id="notice"><%= notice %></p>



<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Oname</th>
      <th>Odesc</th>
      <th>Oemail</th>
      <th>Onum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orgns.each do |orgn| %>
      <tr>
        <td><%= orgn.user_id %></td>
        <td><%= orgn.oname %></td>
        <td><%= orgn.odesc %></td>
        <td><%= orgn.oemail %></td>
        <td><%= orgn.onum %></td>
        <td><%= link_to 'Show', orgn %></td>
        <td><%= link_to 'Edit', edit_orgn_path(orgn) %></td>
        <td><%= link_to 'Destroy', orgn, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Orgn', new_orgn_path %>
